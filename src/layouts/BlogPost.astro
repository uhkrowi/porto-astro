---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.title {
				font-size: 30px;
				/* margin: 0.25em 0 0; */
				font-weight: bold;
				color: black;
			}
			hr {
  			border-top: 1px solid #DDD;
				margin: 1rem 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<!-- <article style="backdrop-filter: blur(8px);"> -->
			<article>
				{heroImage && (
					<img
						width={720}
						height={360}
						src={heroImage}
						alt=""
					/>
				)}
				<div style="background-color: white; padding: 5px 10px; width: fit-content;">
					<span class="title">{title}</span>
				</div>
				{/*pubDate && <span style="color: #848484;">
					<span style="font-size: 14px">Posted at â€” </span>
					<time style="font-size: 14px">{pubDate}</time>
				</span>*/}
				{updatedDate && <div>Last updated on <time>{updatedDate}</time></div>}
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
