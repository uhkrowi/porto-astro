---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, heroImage },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.title {
				font-size: 25px;
				/* margin: 0.25em 0 0; */
				font-weight: bold;
				color: black;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{heroImage && (
					<img
						width={720}
						height={360}
						src={heroImage}
						alt=""
					/>
				)}
				<div style="background-color: white; padding: 5px 10px; width: fit-content;">
					<span class="title">{title}</span>
				</div>
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
